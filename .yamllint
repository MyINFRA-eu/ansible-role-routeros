---
extends: default

comments:
  min-spaces-from-content: 1

rules:
  line-length:
    max: 160
    level: warning
  indentation:
    spaces: consistent
    indent-sequences: false
    check-multi-line-strings: false
    level: warning

ignore: |
  .github/workflows/stale.yml
  .github/workflows/release.yml
  .github/workflows/ci.yml
